<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Estado del robot -->
    <TextView
        android:id="@+id/tvHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Desconocido"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <!-- Distancia por MQTT -->
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distancia: -- cm"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <!-- Adelante -->
    <ImageView
        android:id="@+id/btnForward"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/adelante"
        android:contentDescription="Adelante"
        android:layout_marginBottom="10dp"/>

    <!-- Izquierda - Stop - Derecha -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/izquierda"
            android:contentDescription="Izquierda"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/derecha"
            android:contentDescription="Derecha"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <!-- Atrás -->
    <ImageView
        android:id="@+id/btnBackward"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/atras"
        android:contentDescription="Atrás"
        android:layout_marginBottom="20dp"/>

    <!-- Luces -->
    <ImageView
        android:id="@+id/btnLights"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/luces"
        android:contentDescription="Luces"/>
</LinearLayout>
